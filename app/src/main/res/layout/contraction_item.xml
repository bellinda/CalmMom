<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10">

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/label_field_height"
        tools:text="26 Aug 2018"
        android:textColor="@color/colorContrast"
        android:layout_weight="3"
        android:gravity="center"
        android:id="@+id/date_view"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/label_field_height"
        tools:text="14:00:35"
        android:textColor="@color/colorContrast"
        android:layout_weight="3"
        android:gravity="center"
        android:id="@+id/start_time_view"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/label_field_height"
        tools:text="05:12"
        android:textColor="@color/colorContrast"
        android:layout_weight="2"
        android:gravity="center"
        android:id="@+id/duration_view"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/label_field_height"
        android:layout_weight="2"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/label_field_height"
            tools:text="3x"
            android:textColor="@color/colorContrast"
            android:gravity="center"
            android:textSize="16sp"
            android:id="@+id/painful_view"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_pain_filled"
            android:layout_gravity="center_vertical"
            android:id="@+id/painful_icon"/>
    </LinearLayout>

